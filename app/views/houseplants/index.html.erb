<h1>Houseplant Lineage</h1>

<ul>
<% @og_plants.each do |p|%>
    <li><h4><%= p.breed%></h4></li>
        <ul>
            <li><%= p.name%></li>
                <ul>
                    <% p.child_plants.each do |cp|%>
                        <li><%="#{cp.name}"%></li>
                            <ul>
                                <%cp.child_plants.each do |gp|%>
                                    <li><%="#{gp.name}"%></li>
                                <%end%>
                            </ul>
                    <%end%>
                </ul>
        </ul>
<%end%>
</ul>